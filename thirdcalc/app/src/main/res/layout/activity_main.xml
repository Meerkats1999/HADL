<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="25dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:id="@+id/firstNum"
        android:textSize="25dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mathOp"
        android:layout_marginBottom="25dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:id="@+id/secondNum"
        android:textSize="25dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="45dp"
        android:id="@+id/result"
        android:textSize="25dp"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="296dp"
        android:columnCount="4"
        android:rowCount="4">

        <Button
            android:id="@+id/add"
            android:tag="+"
            android:text="+"
            android:onClick="mathKeys"/>

        <Button
            android:id="@+id/sub"
            android:tag="-"
            android:text="-"
            android:onClick="mathKeys"/>

        <Button
            android:id="@+id/divide"
            android:tag="/"
            android:text="/"
            android:onClick="mathKeys"/>

        <Button
            android:id="@+id/mult"
            android:tag="*"
            android:text="*"
            android:onClick="mathKeys"/>

        <Button
            android:id="@+id/num9"
            android:tag="9"
            android:text="9"
            android:onClick="numKeys"/>

        <Button
            android:id="@+id/num8"
            android:tag="8"
            android:text="8"
            android:onClick="numKeys"/>

        <Button
            android:id="@+id/num7"
            android:tag="7"
            android:text="7"
            android:onClick="numKeys"/>

        <Button
            android:id="@+id/num0"
            android:tag="0"
            android:text="0"
            android:onClick="numKeys"/>

        <Button
            android:id="@+id/num6"
            android:tag="6"
            android:text="6"
            android:onClick="numKeys"/>

        <Button
            android:id="@+id/num5"
            android:tag="5"
            android:text="5" />

        <Button
            android:id="@+id/num4"
            android:tag="4"
            android:text="4"
            android:onClick="numKeys"/>

        <Button
            android:id="@+id/decimal"
            android:tag="."
            android:text="."
            android:onClick="numKeys"/>

        <Button
            android:id="@+id/num3"
            android:tag="3"
            android:text="3"
            android:onClick="numKeys"/>

        <Button
            android:id="@+id/num2"
            android:tag="2"
            android:text="2"
            android:onClick="numKeys"/>

        <Button
            android:id="@+id/num1"
            android:tag="1"
            android:text="1"
            android:onClick="numKeys"/>

        <Button
            android:id="@+id/equal"
            android:tag="="
            android:text="="
            android:onClick="calculate"/>

    </GridLayout>


</LinearLayout>